#!/bin/bash

export PATH="$HOME/.local/share/omarchy/bin:$PATH"

menu() {
  local prompt="$1"
  local options="$2"
  local extra="$3"
  local preselect="$4"

  read -r -a args <<<"$extra"

  if [[ -n "$preselect" ]]; then
    local index
    index=$(echo -e "$options" | grep -nxF "$preselect" | cut -d: -f1)
    if [[ -n "$index" ]]; then
      args+=("-c" "$index")
    fi
  fi

  echo -e "$options" | omarchy-launch-walker --dmenu --width 295 --minheight 1 --maxheight 600 -p "$promptâ€¦" "${args[@]}" 2>/dev/null
}

shopt -s nullglob globstar

prefix=${PASSWORD_STORE_DIR-~/.password-store}
password_files=( "$prefix"/**/*.gpg )
password_files=( "${password_files[@]#"$prefix"/}" )

password=$(menu "Password for" "$(printf '%s\n' "${password_files[@]%.gpg}")" "--width 350" "")

if [[ "$password" == "CNCLD" || -z "$password" ]]; then
  exit 0
else
  pass show -c "$password" 2>/dev/null
fi
