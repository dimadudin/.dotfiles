### Variables ###
set $mod Mod4

set $left  h
set $down  j
set $up    k
set $right l

set $term alacritty
set $browser qutebrowser
set $dmenu j4-dmenu-desktop
set $passmenu alacritty --class=pass-menu -e pass-menu
set $screenshot slurp | grim -g - - | wl-copy

### Input configuration ###
# switch layout on alt+shift
input type:keyboard {
    xkb_layout "us,ru"
    xkb_options "grp:alt_shift_toggle"
}

# Enable disable-while-typing and click-tap
input type:touchpad {
    dwt enabled
    tap enabled
}

# Start terminal
bindsym $mod+Return exec $term

# Start web browser
bindsym $mod+Shift+Return exec $browser

# Start  dmenu
bindsym $mod+d exec $dmenu

# Start pass menu
bindsym $mod+p exec $passmenu

# Take a screenshot of an area and put it into clipboard
bindsym $mod+s exec $screenshot

# Toggle fullscreen
bindsym $mod+f fullscreen

# Kill window
bindsym $mod+w kill

# Reload sway
bindsym $mod+Shift+r reload

# Exit sway
bindsym $mod+Shift+q exit

# Move focus
bindsym $mod+$left  focus left
bindsym $mod+$down  focus down
bindsym $mod+$up    focus up
bindsym $mod+$right focus right

# Move focused window
bindsym $mod+Shift+$left  move left
bindsym $mod+Shift+$down  move down
bindsym $mod+Shift+$up    move up
bindsym $mod+Shift+$right move right

# Switch workspace
bindsym $mod+1 workspace number 1
bindsym $mod+2 workspace number 2
bindsym $mod+3 workspace number 3
bindsym $mod+4 workspace number 4
bindsym $mod+5 workspace number 5
bindsym $mod+6 workspace number 6
bindsym $mod+7 workspace number 7
bindsym $mod+8 workspace number 8
bindsym $mod+9 workspace number 9
bindsym $mod+0 workspace number 10

# Move window to workspace
bindsym $mod+Shift+1 move container to workspace number 1
bindsym $mod+Shift+2 move container to workspace number 2
bindsym $mod+Shift+3 move container to workspace number 3
bindsym $mod+Shift+4 move container to workspace number 4
bindsym $mod+Shift+5 move container to workspace number 5
bindsym $mod+Shift+6 move container to workspace number 6
bindsym $mod+Shift+7 move container to workspace number 7
bindsym $mod+Shift+8 move container to workspace number 8
bindsym $mod+Shift+9 move container to workspace number 9
bindsym $mod+Shift+0 move container to workspace number 10

# Resizing windows
mode "resize" {
    bindsym $left  resize shrink width  10px
    bindsym $down  resize grow   height 10px
    bindsym $up    resize shrink height 10px
    bindsym $right resize grow   width  10px
    bindsym $mod+r mode "default"
}
bindsym $mod+r mode "resize"

### Output configuration ###
set $lack   #708090
set $luster #DEEEED
set $orange #FFAA88
set $green  #789978
set $blue   #7788AA
set $red    #D70000
set $black  #000000
set $gray1  #080808
set $gray2  #191919
set $gray3  #2A2A2A
set $gray4  #444444
set $gray5  #555555
set $gray6  #7A7A7A
set $gray7  #AAAAAA
set $gray8  #CCCCCC
set $gray9  #DDDDDD

# Window style
font pango:JetBrainsMono NF Regular 12
default_border pixel 3
output * bg $black solid_color
#target                 #border #bg    #text  #ind   #child border
client.focused          $gray5  $gray5 $black $gray5 $gray5
client.focused_inactive $gray3  $gray3 $black $gray3 $gray3
client.unfocused        $gray3  $gray3 $black $gray3 $gray3
client.urgent           $orange $gray3 $black $orange $orange
for_window [app_id="^.+menu$"] floating enable, sticky enable, resize set 60 ppt 60 ppt, focus

# Status bar
bar {
    font pango:JetBrainsMono NF Regular 12
    position top
    status_command i3status
    colors {
        background $gray2
        statusline $gray6
        separator $gray4
        #target            #border #bg    #text
        focused_workspace  $gray2  $gray2 $gray9
        inactive_workspace $gray2  $gray2 $gray5
        urgent_workspace   $gray2  $gray2 $orange
    }
}

include /etc/sway/config.d/*
